current_number= int(input('Enter starting number: '))
step_count= 0
print('Enter starting number: ',current_number)
sequence= [current_number]
while current_number != 1:
    if current_number%2 == 0:
       current_number = current_number//2
    else:
        current_number = (current_number*3)+1
    sequence.append(current_number)
    step_count += 1

print('Sequence: ',sequence)
print('Steps: ',step_count)
    
# a while loop was used cause there is no definite number the loop needs to run for

positive_num= int(input('Enter a number: '))

if positive_num <1:
    print('Enter a number Greater than 1')
else:
    print('testing divisors from 2 to ',(positive_num-1),'...')
    is_prime = True
    for i in range(2,positive_num-1):
        if positive_num % i == 0:
            is_prime= False
            print(f'{positive_num} is not prime (divisible by {i})')
            break
    if is_prime:
            print(positive_num, ' is prime!')


