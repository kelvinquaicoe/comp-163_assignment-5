print('=== Challenge 1: Collatz Conjecture ===')
current_number= int(input())
step_count= 0

sequence= [current_number]
while current_number != 1:
    if current_number%2 == 0:
       current_number = current_number//2
    else:
        current_number = (current_number*3)+1
    sequence.append(current_number)
    step_count += 1

print('Enter starting number:','Sequence:', end=' ')
for num in sequence:
    print(f'{num}', end=' ')
print() 
print('Steps:', step_count)

#A while loop was used cause there is no definite number the loop needs to run for


print('\n=== Challenge 2: Prime Number Checker ===')
positive_num= int(input('Enter a number: '))

if positive_num <1:
    print('Enter a number Greater than 1')
else:
    print(f'Testing divisors from 2 to {positive_num-1}...')
    is_prime = True
    for i in range(2,positive_num-1):
        if positive_num % i == 0:
            is_prime= False
            print(f'{positive_num} is not prime (divisible by {i})')
            break
    if is_prime:
            print(positive_num,'is prime!')
#3
print('\n=== Challenge 3: Multiplication Table ===')
row= list(range(1,11))
column= list(range(1,11))

print('Multiplication Table:')
print(f'   ',end='')
for c in column:
    print(f'{c:4}',end='')
print()
for i in row:
    print(f'{i:2}',end=' ')
    for j in column:
        multiple = i*j
        print(f'{multiple:4}',end='')
    print()



